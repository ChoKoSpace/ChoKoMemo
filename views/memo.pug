extends topBar

block content
  .content
    .leftsideBar 
      if memoList != null
        each memo in memoList
          if memo.memoId == memoDetail.memoId
            li.selected
              a(href="/memo?id="+memo.memoId)= memo.title
          else 
            li
              a(href="/memo?id="+memo.memoId)= memo.title
      li
        a(href="") +New Memo
    .rightsideBar
        h1= memoDetail.title 
        p= memoDetail.content
