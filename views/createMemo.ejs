<%- include('header') -%>

<form class="memo-form" action="/createMemo" method="post" style="display: flex; flex-direction: column; height: 100%; width: 75%; margin-left: 10px; margin-block: 10px;">
    <input type="text" class="h1" id="title" name="title" value="" placeholder="New Memo" >
    <textarea class="p1 text-wrap min-vh-100" id="content" name="content" placeholder="This is New Memo"></textarea>
    <input type="submit" id="submit" value="Fix the Title" class="btn disabled btn-lg btn-primary mb-lg-5" style="margin-top: 10px">
    <script>
        document.getElementById("title").addEventListener("input", function() {
        var btn = document.getElementById("submit");
        if (this.value != "") {
            btn.classList.remove("disabled");
            btn.value= "Save"
        } 
        else {
            btn.classList.add("disabled");
            btn.value="Fix the Title";
            }
        });
    </script>
</form>

